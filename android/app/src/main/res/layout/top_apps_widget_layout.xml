<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOP UYGULAMALAR"
        android:textColor="#8E8E93"
        android:textSize="9sp"
        android:textStyle="bold"
        android:letterSpacing="0.05" />

    <View
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="#007AFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/top_app_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:text="1. Instagram - 45dk"
            android:textColor="#1C1C1E"
            android:textSize="11sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/top_app_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:text="2. Twitter - 30dk"
            android:textColor="#3A3A3C"
            android:textSize="11sp" />
            
        <TextView
            android:id="@+id/top_app_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:text="3. YouTube - 20dk"
            android:textColor="#3A3A3C"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>
